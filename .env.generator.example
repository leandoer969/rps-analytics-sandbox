# ---- Postgres connection ----
POSTGRES_DB=rps
POSTGRES_USER=rps_user
POSTGRES_PASSWORD=rps_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ---- Raw-data “messiness” knobs ----
WRITE_RAW=1          # 1=write messy copies to rps_raw.*, 0=skip
SRC_SYSTEM=erp       # label for lineage (erp/crm/fin/etc.)
MESS_RATE_TYPES=0.15 # % numerics turned into messy strings (commas, blanks, "NULL")
MESS_RATE_DATES=0.08 # % date strings reformatted (YYYY-MM-DD, DD.MM.YYYY, MM/DD/YYYY...)
MESS_RATE_FK_BREAKS=0.02 # % FKs replaced with bogus IDs (to test staging repairs)
MESS_RATE_DUPES=0.02     # % duplicate business keys (to test late-arrival dedupe)
